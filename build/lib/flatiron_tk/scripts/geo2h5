#!/bin/bash

set -e

HELP()
{
    echo "This script convert .geo file to hdf5 file using the xml2h5 script"
    echo "search_kw [-m] [-d] [-o]"
    echo "m : name of the mesh geo file without the *.geo"
    echo "d : dimension of the desired mesh: 1/2/3"
    echo "o : output file name without the *."
}

# Get the options
while getopts ":m:d:o:h" option; do
   case $option in
     h) # display Help
       HELP
       exit;;
     m) mesh=${OPTARG};; # assign variables
     d) dim=${OPTARG};;
     o) meshOutName=${OPTARG};;
    \?) # incorrect option
        echo "Error: Invalid option"
        HELP
        exit;;
   esac
done

# Check if meshOutName is empty, if so, assign default value
# as the input mesh name
if [ -z "$meshOutName" ]; then
    meshOutName="${mesh%.*}"
fi



THIS_DIR=$(dirname $0)

gmsh -${dim} ${mesh} -o ${meshOutName}.msh

dolfin-convert ${meshOutName}.msh ${meshOutName}.xml

$THIS_DIR/xml2h5 -pvd ${meshOutName}.xml 

